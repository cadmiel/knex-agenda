<%- include ('../partials/header.ejs') %>

<div class="panel-heading">
    <ol class="breadcrumb">
        <li><a href="#">Home</a></li>
        <li><a href="#">Usuários</a></li>
        <li class="active">Formulário</li>
    </ol>
</div>

<div class="panel-body">
    <form class="" action="<%= form.action %>" method="<%= form.method %>">
        <div class="row">
            <div class="form-group col-md-6">
                <label for="nome" class="control-label">Nome</label>
                <input type="text" class="form-control" id="name" name="name" value="<%= form.user.name %>">
            </div>

            <div class="form-group col-md-6">
                <label for="last_name" class="control-label">Sobre nome</label>
                <input type="text" class="form-control" id="last_name" name="last_name"
                    value="<%= form.user.last_name %>">
            </div>
        </div>

        <div class="row">
            <div class="form-group col-md-9">
                <label for="email" class="control-label">E-mail</label>
                <input type="email" class="form-control" id="email" name="email" value="<%= form.user.email %>">
            </div>
            <div class="form-group col-md-3">
                <label for="password" class="control-label">Senha</label>
                <input type="password" class="form-control" id="password" name="password" value="">
            </div>
        </div>

        <button class="btn btn-primary">Salvar</button>
        <a href="/users" class="btn btn-danger" title="Cancelar e retornar para listagem de usuários">Cancelar</a>
    </form>
</div>

<%- include('../partials/footer') %>